  <body>


     <% if (user) {%>
    <div class="alert alert-primary" role="alert">
  <h1 class="text-center"> Hi <span style="color:red;"><%= user.username %> </span> This is your Profile</h1>
</div> 

<div class="text-center">
    <a href="/user/log-out" class="btn btn-danger">LOG OUT</a>  <a href="/" class="btn btn-primary">HOME</a> </div>
  <% } else { %>

